{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "separate-pull-requests": true,
  "pull-request-title-pattern": "chore: release${component} ${version}",
  "commit-search-depth": 2500,
  "include-component-in-tag": true,
  "bootstrap-sha": "316fc2c39e08b1b8146df26f0703a07bc320b8b5",
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features"
    },
    {
      "type": "fix",
      "section": "Bug Fixes"
    },
    {
      "type": "chore",
      "section": "Chores",
      "hidden": true
    }
  ],
  "packages": {
    "OA": {
      "package-name": "OA",
      "release-type": "simple",
      "extra-files": [
        "OA/c1/shared-version.yaml",
        "OA/c2/shared-version.yaml"
      ],
      "exclude-paths": [
        "OA/c1",
        "OA/c2"
      ]
    },
    "OA/c1": {
      "package-name": "c1",
      "release-type": "node",
      "extra-files": [
        "REST.yaml"
      ]
    },
    "OA/c2": {
      "package-name": "c2",
      "release-type": "node",
      "extra-files": [
        "REST.yaml"
      ]
    }
  }
}
